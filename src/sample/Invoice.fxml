<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<SplitPane fx:id="invoice" dividerPositions="0.25" prefHeight="316.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.InvoiceController">
    <items>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="247.0" prefWidth="195.0">
            <children>
                <TextField fx:id="TxtInvoiceSearch" disable="true" layoutX="56.0" layoutY="23.0" prefHeight="25.0" prefWidth="122.0" />
                <Label layoutX="3.0" layoutY="26.0" text="Search:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Spinner fx:id="SprPercent" layoutX="56.0" layoutY="67.0" prefWidth="122.0" />
                <Label layoutY="70.0" text="Percent:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button fx:id="BtnInvoiceRemove" disable="true" layoutX="39.0" layoutY="121.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0" text="Remove " wrapText="true" />
                <Button fx:id="BtnInvoiceClear" disable="true" layoutX="39.0" layoutY="172.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0" text="Clear " wrapText="true" />
                <Button fx:id="BtnInvoicePrint" disable="true" layoutX="39.0" layoutY="223.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0" text="Print" wrapText="true" />
            </children>
        </AnchorPane>
        <SplitPane dividerPositions="0.9" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
            <items>
                <ScrollPane fitToWidth="true" prefHeight="200.0">
                    <content>
                        <TableView fx:id="TVInvoiceTable" prefHeight="325.0" prefWidth="567.0">
                            <columns>
                                <TableColumn fx:id="ColItemName" prefWidth="134.0" text="Item name" />
                                <TableColumn fx:id="ColNumberOfItems" prefWidth="167.0" text="Number of items" />
                                <TableColumn fx:id="ColUnitOfItems" prefWidth="104.0" text="Units" />
                                <TableColumn fx:id="ColPriceOfItem" prefWidth="160.0" text="Item price (R)" />
                            </columns>
                        </TableView>
                    </content>
                </ScrollPane>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <Label fx:id="LblTotal" text="Total: R0.00" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
            </items>
        </SplitPane>
    </items>
</SplitPane>
