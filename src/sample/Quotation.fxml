<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fitToWidth="true" prefHeight="200.0"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.controllers.QuotationController">
    <content>
        <StackPane>
            <children>
                <TableView fx:id="TVQuotationTable" editable="true" prefHeight="325.0" prefWidth="567.0">
                    <columns>
                        <TableColumn fx:id="colQuotationStockCode" editable="false" prefWidth="75.0" text="Stock Code"/>
                        <TableColumn fx:id="colQuotationDescription" editable="false" prefWidth="110.0"
                                     text="Description"/>
                        <TableColumn fx:id="colQuotationQuantity" editable="false" prefWidth="88.0" text="Quantity"/>
                        <TableColumn fx:id="colQuotationUnit" editable="false" prefWidth="61.0" text="Unit"/>
                        <TableColumn fx:id="colSellingPrice" editable="false" prefWidth="111.0"
                                     text="Selling Price (R)"/>
                        <TableColumn fx:id="colTotalSellingPrice" editable="false" prefWidth="121.0"
                                     text="Total Price (R)"/>
                    </columns>
                </TableView>
                <Pane fx:id="QuotationPopUp" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="200.0" prefWidth="307.0" style="-fx-background-color: efefef;"
                      visible="false">
                    <children>
                        <GridPane prefHeight="201.0" prefWidth="300.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label alignment="CENTER" prefHeight="70.0" prefWidth="300.0" text="Changes item:"
                                       textAlignment="CENTER" GridPane.columnSpan="2">
                                    <font>
                                        <Font name="System Bold" size="24.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="lblQuotationQuantity" alignment="CENTER" prefHeight="58.0"
                                       prefWidth="162.0" text="Quantity ({{0}}):" textAlignment="CENTER"
                                       GridPane.rowIndex="1">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <Spinner fx:id="SprQuotationQuantity" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
                                    <center>
                                        <Button fx:id="BtnQuotationChanges" disable="true" mnemonicParsing="false"
                                                onAction="#ChangesQuotation" text="Changes"
                                                BorderPane.alignment="CENTER"/>
                                    </center>
                                </BorderPane>
                                <BorderPane layoutX="10.0" layoutY="144.0" prefHeight="200.0" prefWidth="200.0"
                                            GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <center>
                                        <Button fx:id="BtnQuotationCancel" mnemonicParsing="false"
                                                onAction="#CloseQuotationPopUp" text="Cancel"
                                                BorderPane.alignment="CENTER"/>
                                    </center>
                                </BorderPane>
                            </children>
                        </GridPane>
                    </children>
                </Pane>
            </children>
        </StackPane>
    </content>
</ScrollPane>
